{% extends 'main.html.twig' %}


{% block content %}
    <div class="container">
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ trailer.image }}" class="card-img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ trailer.title }}</h5>
                        <p class="card-text">{{ trailer.description }}</p>
                        <div>
                            <a href="{{ trailer.link }}" target="_blank" class="card-text">
                                <small class="text-muted">Источник</small>
                            </a>
                        </div>
                        <a href="/" class="btn btn-primary">На главную</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
